{
  "name": "JIRA on Steroid",
  "description": "",
  "version": "1",
  "icons": { "16": "images/jira16.png",
              "48": "images/jira48.png",
              "128": "images/jira128.png" },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://jira.intuit.com/secure/RapidBoard.jspa*"],
      "css": ["lc-jira-color.css"],
      "js": ["lib/base64.js", "lib/underscore-min.js", "github.js", "jquery.js", "utils.js", "content_script.js"]
    }
  ],
  "web_accessible_resources": ["images/web.png", "images/assignee.png", "images/story_points.png", "images/priority.png", "images/label.png", "images/ajax-loader.gif", "script.js"],
  "manifest_version": 2
}
